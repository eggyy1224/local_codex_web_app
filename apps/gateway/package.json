{
  "name": "@lcwa/gateway",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo 'no lint configured for gateway'",
    "test": "pnpm test:unit && pnpm test:integration",
    "test:unit": "vitest run -c vitest.unit.config.ts",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:e2e": "echo 'no e2e configured for gateway'",
    "test:e2e:server": "tsx src/testing/e2eServer.ts",
    "test:coverage": "vitest run -c vitest.coverage.config.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.1.0",
    "@fastify/websocket": "^11.2.0",
    "@lcwa/shared-types": "workspace:*",
    "fastify": "^5.2.1",
    "node-pty": "^1.1.0"
  },
  "devDependencies": {
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
